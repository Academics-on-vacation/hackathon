# Database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bvs_analytics
# For SQLite: sqlite:///./bvs_analytics.db

# API Settings
API_V1_STR=/api/v1
PROJECT_NAME=BVS Analytics
VERSION=1.0.0
DESCRIPTION=Сервис анализа полетов БВС

# Security
SECRET_KEY=your-secret-key-here
