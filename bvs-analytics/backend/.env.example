# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080"]

# Logging
LOG_LEVEL=INFO

# File Upload
MAX_UPLOAD_SIZE=50000000  # 50MB
UPLOAD_DIR=./uploads